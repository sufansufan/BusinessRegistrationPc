body {
  background: #f3f5f7;
}
.el-menu[role='menubar'] {
  background: transparent !important;
}
.el-menu-item,
.el-submenu__title {
  height: 50px !important;
  line-height: 50px !important;
}

@mixin left-bar(
  // 默认导航栏文字颜色
    $def-color,
  // 选中导航栏文字颜色
    $act-color,
  // 选中导航栏文字背景
    $act-bg,
  // LOGO背景色
    $logo-bg,
  // LOGO英文字体颜色
    $logo-en-color,
  // LOGO中文字体颜色
    $logo-color: $act-color,
  // 导航栏背景颜色
    $bg-color: 'transparent',
  // 导航栏背景图片
    $bg-img: 'transparent',
  // 导航栏缩小后悬浮菜单背景图片
    $menu-narrow-bg: 'transparent'
) {
  #nprogress .bar {
    background: $act-color;
  }
  #app {
    .theme-select li.actived {
      img {
        border: 3px solid $act-color;
      }
      span {
        color: $act-color;
      }
    }
    .tags-view-container .tags-view-wrapper .tags-view-item.active {
      color: $act-color;
      background: #f3f5f7;
      &::before {
        background: $act-color;
      }
    }
    .sidebar-container {
      background: $bg-color $bg-img;
      .logo {
        > a {
          > div {
            &:first-child {
              background: $logo-bg;
            }
            &:last-child {
              > p {
                &:first-child {
                  color: $logo-color;
                }
                &:last-child {
                  color: $logo-en-color;
                }
              }
            }
          }
        }
      }
      .el-menu {
        background-color: transparent !important;
      }
      .is-active {
        &[tabindex='-1'] {
          background-color: $act-bg;
          border-left: 3px solid $act-color;
        }
        > .el-submenu__title {
          color: $act-color;
        }
      }
    }
    @content;
    .sidebar-container .el-submenu .el-menu-item,
    .el-submenu__title {
      color: $def-color !important;
      background-color: transparent !important;
      &.is-active {
        color: $act-color;
        background-color: $act-bg;
      }
    }
  }
  .el-submenu__title i {
    color: $def-color !important;
  }
  .dashboard-income {
    .num {
      color: $act-color;
    }
  }
  .el-menu--vertical .el-menu {
    background: $menu-narrow-bg;
    background-color: $bg-color !important;
  }
  .el-menu-item,
  .el-submenu__title {
    color: $def-color !important;
    background-color: transparent !important;
    &.is-active {
      color: $act-color;
      background-color: $act-bg;
    }
  }
  .is-active {
    > .el-submenu__title {
      color: $act-color;
    }
  }
}

@mixin top-bar($nav-act-color, $nav-def-color: #a7a7a7) {
  .el-breadcrumb__separator,
  .el-breadcrumb__inner a,
  .el-breadcrumb__inner.is-link {
    font-weight: 100;
    color: $nav-def-color;
    font-weight: initial;
  }
  .no-redirect {
    color: $nav-act-color;
  }
}
.blackgold-theme {
  $act-color: #c19b62 !important;
  .act-color {
    color: $act-color;
  }
  @include left-bar(
    $bg-img: url(../assets/theme/blackgold-theme/images/slidebar-bg.png) repeat,
    $menu-narrow-bg: url(../assets/theme/blackgold-theme/images/slidebar-bg.png)
      repeat,
    $def-color: #7c776d,
    $act-color: $act-color,
    $logo-bg: linear-gradient(to bottom right, #e4c384, #be9966),
    $logo-en-color: #6d5734,
    $bg-color: #1c1c1c,
    $act-bg: #101010 !important
  );
  @include top-bar($nav-act-color: $act-color);
  .el-progress-bar__inner {
    background-color: #e4c384 !important;
  }
  .el-tabs__nav-wrap {
    .el-tabs__active-bar {
      background: $act-color;
    }
  }
}

.fox-theme {
  $act-color: #fd753b !important;
  .act-color {
    color: $act-color;
  }
  @include left-bar(
    $bg-img: url(../assets/theme/fox-theme/images/slidebar-bg.png) right bottom
      no-repeat,
    $menu-narrow-bg: url(../assets/theme/fox-theme/images/slidebar-bg.png)
      repeat,
    $def-color: #eab7a3,
    $act-color: $act-color,
    $logo-bg: #fff,
    $logo-color: #fff,
    $logo-en-color: #fff,
    $bg-color: #fd753b,
    $act-bg: #f3f5f7 !important
  ) {
    .main-container {
      z-index: 1001;
      background: #f3f5f7 url(../assets/theme/fox-theme/images/bg.png) right top
        no-repeat;
    }
    .tags-view-container {
      background: rgba(255, 255, 255, 0.5);
    }
    .navbar {
      background: transparent !important;
    }
    .hideSidebar .sidebar-container .is-active > .el-submenu__title {
      color: #fff !important;
    }
    .app-wrapper.openSidebar {
      &::before {
        content: '';
        width: 34px;
        height: 421px;
        position: absolute;
        bottom: 0;
        left: 260px;
        z-index: 1002;
        background: url(../assets/theme/fox-theme/images/slidebar-bom-bg.png) -260px
          top no-repeat;
      }
      .sidebar-container {
        &::after {
          content: '';
          width: 294px;
          height: 421px;
          position: absolute;
          bottom: 0;
          left: 0;
          z-index: 1001;
          background: url(../assets/theme/fox-theme/images/slidebar-bom-bg.png)
            no-repeat;
        }
        .is-active {
          &[tabindex='-1'] {
            border-left: 3px solid #5d90d1 !important;
          }
          > .el-submenu__title {
            color: #fff !important;
          }
        }
      }
    }
  }
  .el-submenu.is-opened > .el-submenu__title i,
  .is-active > .el-submenu__title {
    color: #fff !important;
  }
  @include top-bar($nav-act-color: $act-color);
  .dashboard-income {
    > div {
      &:first-child {
        .el-progress-bar__inner {
          background-color: #fea36e !important;
        }
        .num {
          color: #fea36e !important;
        }
      }
      &:nth-child(2) {
        .el-progress-bar__inner {
          background-color: #a48cfe !important;
        }
        .num {
          color: #a48cfe !important;
        }
      }
      &:nth-child(3) {
        .el-progress-bar__inner {
          background-color: #ff8f61 !important;
        }
        .num {
          color: #ff8f61 !important;
        }
      }
      &:last-child {
        .el-progress-bar__inner {
          background-color: #6689fd !important;
        }
        .num {
          color: #6689fd !important;
        }
      }
    }
  }
  .el-tabs__nav-wrap {
    .el-tabs__active-bar {
      background: $act-color;
    }
  }
}
