import request from '@/utils/request'

// 获取学生列表
export const getStudentList = data =>
  request({
    url: '/a/student/findStudentList',
    data
  })

// 添加学生
export const addStudent = data =>
  request({
    url: '/a/student/addAndEditStudent',
    data
  })

// 获取学生详情
export const getStudentInfo = data =>
  request({
    url: '/a/student/getStudentInfo',
    data
  })

// 修改学生成绩
export const editStudentEntryScore = data =>
  request({
    url: '/a/student/editStudentEntryScore',
    data
  })

// 删除学生信息
export const deleteStudentById = data =>
  request({
    url: '/a/student/deleteStudentById',
    data
  })
