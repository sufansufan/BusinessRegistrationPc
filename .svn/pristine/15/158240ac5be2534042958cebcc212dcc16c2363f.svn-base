//覆盖一些element-ui样式

.el-breadcrumb__inner,
.el-breadcrumb__inner a {
  font-weight: 400 !important;
}

.el-upload {
  input[type='file'] {
    display: none !important;
  }
}

.el-upload__input {
  display: none;
}

.cell {
  .el-tag {
    margin-right: 0px;
  }
}

.small-padding {
  .cell {
    padding-left: 5px;
    padding-right: 5px;
  }
}

.fixed-width {
  .el-button--mini {
    padding: 7px 10px;
    width: 60px;
  }
}

.status-col {
  .cell {
    padding: 0 10px;
    text-align: center;
    .el-tag {
      margin-right: 0px;
    }
  }
}

//暂时性解决dialog 问题 https://github.com/ElemeFE/element/issues/2461
.el-dialog {
  transform: none;
  left: 0;
  position: relative;
  margin: 0 auto;
}

//文章页textarea修改样式
.article-textarea {
  textarea {
    padding-right: 40px;
    resize: none;
    border: none;
    border-radius: 0px;
    border-bottom: 1px solid #bfcbd9;
  }
}

//element ui upload
.upload-container {
  .el-upload {
    width: 100%;
    .el-upload-dragger {
      width: 100%;
      height: 200px;
    }
  }
}

//dropdown
.el-dropdown-menu {
  a {
    display: block;
  }
}

// progress
@keyframes progress-bar-stripes {
  from {
    background-position: 40px 0;
  }
  to {
    background-position: 0 0;
  }
}
.el-progress-bar__outer > .el-progress-bar__inner {
  animation: reverse progress-bar-stripes 0.8s linear infinite,
    animate-positive 2s;
  background-image: linear-gradient(
    -45deg,
    rgba(255, 255, 255, 0.15) 25%,
    transparent 25%,
    transparent 50%,
    rgba(255, 255, 255, 0.15) 50%,
    rgba(255, 255, 255, 0.15) 75%,
    transparent 75%,
    transparent
  );
  background-size: 40px 40px;
}

.el-scrollbar {
  > .el-scrollbar__wrap {
    overflow-x: auto !important;
  }
}

.dialog-footer {
  margin-top: 20px;
  display: flex;
  justify-content: center;
}

.el-message {
  min-width: 250px !important;
  padding: 10px !important;
  box-shadow: 0 0 5px #ddd;
}

.el-table {
  margin-bottom: 22px;
  .el-table__header th,
  .el-table__body td {
    text-align: center !important;
  }
}
.el-tabs {
  .el-tabs__nav {
    margin-left: 7px;
  }
  .el-tabs__nav-wrap {
    &::after {
      display: none;
    }
    .el-tabs__item {
      color: #979797;
      &.is-active {
        font-weight: bold;
        font-size: 18px;
        z-index: 2;
        color: #000;
      }
    }
    .el-tabs__active-bar {
      left: -7px;
      bottom: 8px;
      height: 12px;
      opacity: 0.5;
      border-radius: 3px;
      padding: 0 7px;
      box-sizing: content-box;
    }
  }
}

.el-input--medium {
  .el-input__inner {
    height: 44px !important;
  }
  &.is-disabled {
    input {
      color: #777 !important;
    }
  }
}
.el-form-item--medium {
  .el-cascader--medium {
    line-height: 44px !important;
  }
  &:not(.is-error) {
    &:not(.is-disabled) {
      .el-input__inner {
        &:not(:focus) {
          background: #f8f8f8 !important;
          border-color: #ebebeb !important;
        }
      }
    }
  }
}

.el-input-number--medium {
  width: auto !important;
  > span {
    height: 50% !important;
    line-height: 22px !important;
  }
  .el-input--medium {
    width: auto !important;
  }
}

.el-button--big {
  flex: 1;
  max-width: 230px !important;
}

.el-button--mini.is-circle {
  border: 0 !important;
  &.el-button--text {
    padding: 7px !important;
  }
  &:hover {
    background: #fff !important;
  }
}
